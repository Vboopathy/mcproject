<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.ebookclub.BorrowBookActivity"
    android:background="@drawable/borrow1">

    <EditText
        android:id="@+id/searchBook"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/edittextstyle"
        android:drawableLeft="@android:drawable/ic_menu_search"
        android:ems="10"
        android:fadingEdge="horizontal"
        android:hint="Enter book name or location"
        android:inputType="textPersonName"
        android:textColor="#FFFFF0"
        android:textColorHint="#FFFFF0"
        android:textSize="18sp" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/displayBooks"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/searchBook"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="37dp" />
</RelativeLayout>
