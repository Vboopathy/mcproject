<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.ebookclub.ActivityRegistration"
    android:background="@drawable/login">

    <EditText
        android:id="@+id/txtUsernameSignup"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_centerInParent="true"
        android:background="@color/colorWhite"
        android:text="Username"
        android:layout_centerHorizontal="true" />

    <EditText
        android:id="@+id/txtPassword1"
        android:layout_below="@+id/txtUsernameSignup"
        android:layout_centerHorizontal="true"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:background="@color/colorWhite"
        android:text="Password"
        android:layout_marginTop="5dp"/>

    <EditText
        android:id="@+id/txtPassword2"
        android:layout_below="@+id/txtPassword1"
        android:layout_centerHorizontal="true"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:background="@color/colorWhite"
        android:text="Password, Again"
        android:layout_marginTop="5dp"/>

    <Button
        android:id="@+id/btnRegister"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Register"
        android:background="@color/colorPrimary"
        android:layout_below="@+id/txtPassword2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:textSize="20sp"
        android:paddingRight="5dp"
        android:paddingLeft="5dp"/>





</RelativeLayout>
